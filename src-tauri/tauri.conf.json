{
    "$schema": "../node_modules/@tauri-apps/cli/schema.json",
    "build": {
        "beforeBuildCommand": "yarn build",
        "beforeDevCommand": "yarn dev",
        "devPath": "http://localhost:5173",
        "distDir": "../dist"
    },
    "package": {
        "productName": "BULKUS",
        "version": "0.1.1"
    },
    "tauri": {
        "allowlist": {
            "all": true,
            "fs": {
                "scope": [
                    "**"
                ]
            }
        },
        "bundle": {
            "active": true,
            "category": "Productivity",
            "copyright": "Copyright @ OLDI-K, OOO 2022, All rights reserved",
            "deb": {
                "depends": []
            },
            "externalBin": [],
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "identifier": "dev.kmoz.bulkus",
            "longDescription": "",
            "macOS": {
                "license": "./LICENCE",
                "entitlements": "./entitlements.plist",
                "exceptionDomain": "kmoz.dev",
                "minimumSystemVersion": "10.13",
                "frameworks": [],
                "providerShortName": "Artem Semenov",
                "signingIdentity": "DD0B51BEE9D02E2A5DA4D84ACADAB8CF3D11C9F6"  
            },
            "resources": [],
            "shortDescription": "",
            "targets": "all",
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": ""
            }
        },
        "security": {
            "csp": null
        },
        "updater": {
            "active": false
        },
        "windows": [
            {
                "fullscreen": false,
                "height": 800,
                "resizable": false,
                "title": "BULKUS",
                "width": 600,
                "transparent": true,
                "decorations": true,
                "theme": "Light",
                "fileDropEnabled": false
            }
        ],
        "macOSPrivateApi": true
    }
